
<div class = "panel panel-primary">
	<div class="panel-heading">
     <h3 class="panel-title">Users</h3>
    </div>
    <br /><br />
<div class="row text-center pagination-centered">
<%= link_to( {:action => 'new'}, :class => 'action new', class: "btn btn-success") do %>
<i class="glyphicon glyphicon-plus">Add New User</i>
<% end %><br /><br /></div>
    <div class="bs-component">
              <ul class="nav nav-tabs">
                <li class="active"><a aria-expanded="true" href="#firmy" data-toggle="tab">Firmy</a></li>
                <li class=""><a aria-expanded="false" href="#osoby" data-toggle="tab">Osoby Prywatne</a></li>
              </ul>
    <div class="panel-body">
    	<div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="firmy">
	<table class = "table table-striped table-hover" id="users" >
		<thead>
		<tr>
			<th>Email</th>
			<th>Last Name</th>
			<th>Organization Name</th>
			<th>NIP</th>
			<th>Phone</th>
			<th>Mobile Phone</th>
			<th>Actions</th>
			<th>Equipment</th>
		</tr>
		</thead>

		<tbody>
		<% @organization.each do |f| %>
		
		<tr>
			<td><%= truncate(f.email, length: 20) %></td>
			<td><%= truncate(f.lastname, length: 20) %></td>
			<td><%= truncate(f.organization_name, length: 25) %></td>
			<td><%= f.NIP %></td>
			<td><%= f.phone %></td>
			<td><%= f.mobile_phone %></td>
			<td>
				<%= link_to("", {:action => 'show', :id => f.id}, :class => 'action show', class: "btn btn-info btn-sm glyphicon glyphicon-info-sign") %>
				<%= link_to( "", {:action => 'edit', :id => f.id}, :class => 'action edit', class: "btn btn-warning btn-sm glyphicon glyphicon-pencil") %>
				<%= link_to '', f, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger btn-sm glyphicon glyphicon-trash" %>
			</td>
			<td><%= link_to "", new_user_service_path(f), class: "btn btn-success btn-sm glyphicon glyphicon-plus"%>
				<%= link_to "", user_services_path(f), class: "btn btn-info btn-sm glyphicon glyphicon-search"%>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
	</div>

	<div class="tab-pane fade" id="osoby">

		<table class = "table table-striped table-hover" id="users1" >
		<thead>
		<tr>
			<th>Email</th>
			<th>Last Name</th>
			<th>Phone</th>
			<th>Mobile Phone</th>
			<th>Actions</th>
			<th>Equipment</th>
		</tr>
		</thead>

		<tbody>
		<% @private_person.each do |o| %>
		<tr>
			<td><%= truncate(o.email, length: 25) %></td>
			<td><%= truncate(o.lastname, length: 18) %></td>
			<td><%= o.phone %></td>
			<td><%= o.mobile_phone %></td>
			<td>
				<%= link_to("", {:action => 'show', :id => o.id}, :class => 'action show', class: "btn btn-info btn-sm glyphicon glyphicon-search") %>
				<%= link_to("", {:action => 'edit', :id => o.id}, :class => 'action edit', class: "btn btn-warning btn-sm glyphicon glyphicon-pencil")%>
				<%= link_to '', o, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger btn-sm glyphicon glyphicon-trash" %>
			</td>
			<td><%= link_to "", new_user_service_path(o), class: "btn btn-success btn-sm glyphicon glyphicon-plus"%>
				<%= link_to "", user_services_path(o), class: "btn btn-info btn-sm glyphicon glyphicon-search"%>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
	</div>
</div>
<div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div>
</div></div></div>

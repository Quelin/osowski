
<%= link_to("Add New User", {:action => 'new'}, :class => 'action new', class: "btn btn-info") %><br /><br />
<div class = "panel panel-primary">
	<div class="panel-heading">
     <h3 class="panel-title">Users</h3>
    </div>
    <br />

    <div class="bs-component">
              <ul class="nav nav-tabs">
                <li class="active"><a aria-expanded="true" href="#firmy" data-toggle="tab">Firmy</a></li>
                <li class=""><a aria-expanded="false" href="#osoby" data-toggle="tab">Osoby Prywatne</a></li>
              </ul>
    <div class="panel-body">
    	<div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="firmy">
	<table class = "table table-striped table-hover" id="users" >
		<thead>
		<tr>
			<th>Name</th>
			<th>Last Name</th>
			<th>Organization Name</th>
			<th>REGON</th>
			<th>NIP</th>
			<th>Phone</th>
			<th>Street</th>
			<th>Town</th>
			<th>Actions</th>
		</tr>
		</thead>

		<tbody>
		<% @firmy.each do |f| %>
		
		<tr>
			<td><%= f.name %></td>
			<td><%= f.lastname %></td>
			<td><%= f.nazwa %></td>
			<td><%= f.REGON %></td>
			<td><%= f.NIP %></td>
			<td><%= f.phone %></td>
			<td><%= f.ulica %></td>
			<td><%= f.miasto %></td>
			<td>
				<%= link_to("Details", {:action => 'show', :id => f.id}, :class => 'action show', class: "btn btn-info") %>
				<%= link_to("Edit", {:action => 'edit', :id => f.id}, :class => 'action edit', class: "btn btn-warning") %>
				<%= link_to 'Delete', f, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger"%>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
	</div>

	<div class="tab-pane fade" id="osoby">

		<table class = "table table-striped table-hover" id="users1" >
		<thead>
		<tr>
			<th>Name</th>
			<th>Last Name</th>
			<th>Phone</th>
			<th>Town</th>
			<th>Actions</th>
		</tr>
		</thead>

		<tbody>
		<% @osoby_prywatne.each do |o| %>
		<tr>
			<td><%= o.name %></td>
			<td><%= o.lastname %></td>
			<td><%= o.phone %></td>
			<td><%= o.miasto %></td>
			<td>
				<%= link_to("Details", {:action => 'show', :id => o.id}, :class => 'action show', class: "btn btn-info") %>
				<%= link_to("Edit", {:action => 'edit', :id => o.id}, :class => 'action edit', class: "btn btn-warning") %>
				<%= link_to 'Delete', o, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger"%>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
	</div>
</div>
<div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div>
</div></div>
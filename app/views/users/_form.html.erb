<div class = "form-group">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="well bs-component">
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Imię" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Nazwisko" %><br>
    <%= f.text_field :lastname, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Firma?" %>
    <%= f.check_box :is_organization, class: "checkbox inline", id: 'checkbox' %>
  </div><br />
  
<div id="delivery" style="display:none;">
  <div class="field">
    <%= f.label "Nazwa firmy" %><br>
    <%= f.text_field :organization_name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :REGON %><br>
    <%= f.text_field :REGON, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :NIP %><br>
    <%= f.text_field :NIP, class: "form-control" %>
  </div>
  </div>



  <div class="field">
    <%= f.label "Telefon" %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Telefon komórkowy" %><br>
    <%= f.text_field :mobile_phone, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Kod pocztowy" %><br>
    <%= f.text_field :postcode, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Ulica" %><br>
    <%= f.text_field :street, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Miasto" %><br>
    <%= f.text_field :town, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :admin %>
    <%= f.check_box :admin, class: "checkbox inline" %>
  </div><br />
  <div class="field">
    <%= f.label "Dodatkowy opis" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <br />
  <div class = "form-buttons">
    <%= submit_tag("Stwórz Użytkownika", class: "btn btn-success") %>
  </div>
<% end %>
</div></div>


<script>
var checkbox = document.getElementById('checkbox');
var delivery_div = document.getElementById('delivery');
var showHiddenDiv = function(){
   if(checkbox.checked) {
     delivery_div.style['display'] = 'block';
   } else {
     delivery_div.style['display'] = 'none';
   } 
}
checkbox.onclick = showHiddenDiv;
showHiddenDiv();
</script>
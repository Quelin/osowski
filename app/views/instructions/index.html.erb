<div class="col-lg-12">
<div class = "panel panel-primary">
  <div class="panel-heading">
     <h3 class="panel-title">In order to download the instrucion click the name of the instruction or copy link below the name and paste it to your browser:</h3>
    </div>
    <div class="panel-body">
      <br /><div class="row text-center pagination-centered">
      <%= link_to("Back to List", users_path, class: "btn btn-primary glyphicon glyphicon-chevron-left") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to("Add New instruction", new_user_instruction_path, class: "btn btn-success glyphicon glyphicon-plus") %>
      <br /> <br /></div>

      <% @instructions.each do |instruction| %>
<div class="row">
  <div class="col-lg-12">
<div class="col-lg-10 col-lg-offset-1">
      
            <h2 id="type-blockquotes"><%= link_to(instruction.name, instruction.link) %>
              &nbsp;&nbsp;
              <%= link_to("", edit_user_instruction_path(instruction.user, instruction), :class => 'action edit', class: "btn btn-warning btn-sm glyphicon glyphicon-pencil") %>
              
              <%= link_to '', [instruction.user, instruction], method: :delete, data: { confirm: 'Are you sure you want to delete this equipment?' }, class: "btn btn-danger btn-sm glyphicon glyphicon-trash"%></h2>
      

      <div class="row">
          <div class="col-lg-10">
            <div class="bs-component">
              <blockquote>
                <p>Direct Link:<br /></p>
                <p><%=instruction.link%></p>
                <p>Description: <br /></p>
                <p><%=instruction.description%></p>
                <small>Created at: <cite><%=instruction.created_at.to_s(:db)%></cite></small>
              </blockquote>
            <div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div></div>
          </div>
        </div></div></div></div>

    <% end %>

    
</div>

</div>
</div>